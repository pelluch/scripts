#!/bin/bash

export PACMAN_SRC=/home/pablo/android/src/pacman
export JAVA_HOME=/opt/java6
export PATH=/opt/java6/bin:$PATH
export USE_CCACHE=1
export OUT_DIR_COMMON_BASE=/home/pablo/android/builds
export CCACHE_DIR=/home/pablo/android/builds/ccache
export PREBUILTS_DIR=/home/pablo/android/prebuilt/pacman

rm -rf "$CCACHE_DIR"
rm -rf "$OUT_DIR_COMMON_BASE/pacman"

mkdir -p "$CCACHE_DIR"
mkdir -p "$OUT_DIR_COMMON_BASE"

sudo pyversion 2

cd $PACMAN_SRC

./build-pac.sh hammerhead

sudo pyversion 3

rm -rf "$CCACHE_DIR"

rm $PREBUILTS_DIR/pac_mako_4.4*
cd "$OUT_DIR_COMMON_BASE/pacman/target/product/hammerhead"
cp pac_mako_4.4*zip "$PREBUILTS_DIR/"

echo "All done"
